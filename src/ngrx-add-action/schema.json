{
  "$schema": "http://json-schema.org/schema",
  "id": "NgSchematicsNgRxAction",
  "title": "ng-schematics NGRX Add Action Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "appRoot": {
      "type": "string"
    },
    "path": {
      "type": "string",
      "default": "app"
    },
    "sourceDir": {
      "type": "string",
      "default": "src"
    },
    "actionPath": {
      "type": "string"
    },
    "payload": {
      "type": "string",
      "description": "Name of payload",
      "aliases": ["p"]
    },
    "payloadType": {
      "type": "string",
      "description": "Type of payload",
      "aliases": ["pt"]
    }
  },
  "required": [
    "name",
    "path"
  ]
}
