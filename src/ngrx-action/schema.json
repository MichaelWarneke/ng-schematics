{
  "$schema": "http://json-schema.org/schema",
  "id": "NgSchematicsNgRxAction",
  "title": "ng-schematics NGRX Action Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "appRoot": {
      "type": "string"
    },
    "path": {
      "type": "string",
      "default": "app"
    },
    "sourceDir": {
      "format": "path",
      "type": "string",
      "default": "src"
    },
    "spec": {
      "type": "boolean",
      "description": "Specifies if a spec file is generated.",
      "default": false
    },
    "flat": {
      "type": "boolean",
      "default": false,
      "description": "Flag to indicate if a dir is created."
    },
    "group": {
      "type": "boolean",
      "default": false,
      "description": "Group actions file within 'actions' folder",
      "aliases": ["g"]
    },
    "groupName": {
      "type": "string",
      "default": "groupName",
      "description": "Name of the action group",
      "aliases": ["gn"]
    },
    "payload": {
      "type": "string",
      "description": "Name of payload",
      "aliases": ["p"]
    },
    "payloadType": {
      "type": "string",
      "description": "Type of payload",
      "aliases": ["pt"]
    }
  },
  "required": [
    "name"
  ]
}
